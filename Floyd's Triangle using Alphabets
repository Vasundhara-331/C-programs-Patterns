//Floyd's Triangle using Alphabets
/*
a
b c
d e f
g h i j 
k l m n o
*/
# include <stdio.h>
int main()
{
    int rows,i,j,k;
    char n='a';
    printf("Enter the limit: ");
    scanf("%d",&rows);
    if(rows>7)
    {
        printf("\nEnter a number less than 7");
    }
    else
    {
    for(i = 0 ; i < rows ; i++)
    {
        for(j = 0 ; j <= i ; j++)
        {
            printf("%c ",n++);
        }
        printf("\n");
    }
    }
return 0;
}
